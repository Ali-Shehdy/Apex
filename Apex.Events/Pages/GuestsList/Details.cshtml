@page
@model Apex.Events.Pages.GuestsList.DetailsModel

@{
    ViewData["Title"] = "Guest Details";
}

<div class="container mt-4">

    <!-- Page Title -->
    <h2 class="mb-4 text-primary">Guest Details</h2>

    <!-- Guest Info Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Guest Information</h5>
        </div>

        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">First Name</dt>
                <dd class="col-sm-9">@Model.Guest.FirstName</dd>

                <dt class="col-sm-3">Last Name</dt>
                <dd class="col-sm-9">@Model.Guest.LastName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Guest.Email</dd>
            </dl>
        </div>
    </div>

    <!-- Event Participation Card -->
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">Event Participation</h5>
        </div>

        <div class="card-body">

            @if (Model.Guest.GuestBookings == null || !Model.Guest.GuestBookings.Any())
            {
                <p class="text-muted">This guest is not booked for any events.</p>
            }
            else
            {
                <table class="table table-bordered table-striped mt-3">
                    <thead class="table-light">
                        <tr>
                            <th>Event Name</th>
                            <th>Event Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model.Guest.GuestBookings)
                        {
                            <tr>
                                <td>@booking.Event.EventName</td>
                                <td>@booking.Event.EventDate.ToShortDateString()</td>
                                <td>
                                    <span class="badge bg-info">Booked</span>
                                    <a asp-page="/GuestBookings/Delete"
                                       asp-route-id="@booking.GuestBookingId"
                                       class="btn btn-sm btn-danger ms-2">
                                        Cancel
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

    <div class="mt-4">
        <a asp-page="./Edit" asp-route-id="@Model.Guest.GuestId" class="btn btn-warning">Edit</a>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </div>

</div>
