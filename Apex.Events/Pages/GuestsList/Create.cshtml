@page
@model Apex.Events.Pages.GuestsList.CreateModel

@{
    ViewData["Title"] = "Create Guest";
}

<h1>Create Guest</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Guest.FirstName" class="form-label"></label>
                <input asp-for="Guest.FirstName" class="form-control" />
                <span asp-validation-for="Guest.FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Guest.LastName" class="form-label"></label>
                <input asp-for="Guest.LastName" class="form-control" />
                <span asp-validation-for="Guest.LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Guest.Email" class="form-label"></label>
                <input asp-for="Guest.Email" class="form-control" />
                <span asp-validation-for="Guest.Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-page="./Index" class="btn btn-secondary ms-2">Back</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
