@page
@model Apex.Events.Pages.GuestsList.IndexModel

@{
    ViewData["Title"] = "Guests";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-people-fill me-2"></i> Guests List
        </h2>

        <a asp-page="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-person-plus-fill me-1"></i> Add Guest
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th><i class="bi bi-person"></i> First Name</th>
                        <th><i class="bi bi-person"></i> Last Name</th>
                        <th><i class="bi bi-envelope"></i> Email</th>
                        <th class="text-center"><i class="bi bi-gear"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Guest)
                    {
                        <tr>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.Email</td>
                            <td class="text-center">
                                <a asp-page="./Details" asp-route-id="@item.GuestId"
                                   class="btn btn-outline-primary btn-sm me-1">
                                    <i class="bi bi-eye-fill"></i>
                                </a>

                                <a asp-page="./Edit" asp-route-id="@item.GuestId"
                                   class="btn btn-outline-warning btn-sm me-1">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>

                                <a asp-page="./Delete" asp-route-id="@item.GuestId"
                                   class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
