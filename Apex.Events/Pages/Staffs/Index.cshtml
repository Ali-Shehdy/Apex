@page
@model Apex.Events.Pages.Staffs.IndexModel

<h2 class="mb-4">Staff Members</h2>

<div class="d-flex justify-content-end mb-3">
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-person-plus"></i> Add Staff
    </a>
</div>

<div class="card shadow-sm">
    <table class="table table-hover mb-0">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Role</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model.StaffList)
            {
                <tr>
                    <td>@s.FirstName @s.LastName</td>
                    <td>@s.Email</td>
                    <td>@s.Phone</td>
                    <td>@s.Role</td>
                    <td class="text-end">
                        <a asp-page="Details" asp-route-id="@s.StaffId" class="btn btn-sm btn-info me-1">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-page="Edit" asp-route-id="@s.StaffId" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a asp-page="Delete" asp-route-id="@s.StaffId" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
