@page
@model Apex.Events.Pages.Staffings.ManageStaffModel
@{
    ViewData["Title"] = "Manage Staff";
}

<h2 class="mb-3">Manage Staff for @Model.Event.EventName (@Model.Event.EventType)</h2>
<p class="text-muted">Event date: @Model.Event.EventDate.ToShortDateString()</p>

<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <h5 class="card-title">Add staff to this event</h5>

        @if (Model.AvailableStaff.Any())
        {
            <form method="post" asp-page-handler="AddStaff" class="row g-2">
                <input type="hidden" name="eventId" value="@Model.Event.EventId" />
                <div class="col-md-8">
                    <select asp-for="SelectedStaffId" class="form-select" asp-items="Model.StaffList">
                        <option value="0">-- Select Staff --</option>
                    </select>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-person-plus"></i> Add
                    </button>
                </div>
            </form>
        }
        else
        {
            <div class="text-muted">No available staff to add.</div>
        }
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Staff</th>
                    <th>Role</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model.Staffings)
                {
                    <tr>
                        <td>@s.Staff.FirstName @s.Staff.LastName</td>
                        <td>@s.Staff.Role</td>
                        <td class="text-end">
                            <form method="post" asp-page-handler="RemoveStaff" class="d-inline">
                                <input type="hidden" name="eventId" value="@s.EventId" />
                                <input type="hidden" name="staffingId" value="@s.StaffingId" />
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="bi bi-person-dash"></i> Remove
                                </button>
                            </form>
                        </td>
                    </tr>
                }
                @if (!Model.Staffings.Any())
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">No staff assigned yet.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="mt-3">
    <a asp-page="/Staffings/Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back to assignments</a>
</div>
