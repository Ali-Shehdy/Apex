@page
@model Apex.Events.EventsList.EditModel
@using Apex.Events.Data

@{
    ViewData["Title"] = "Edit Event";
}

<h1 class="text-primary mb-3">Edit Event</h1>

<form method="post" class="card shadow p-4">
    <input type="hidden" asp-for="Event.EventId" />

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <!-- Event Name -->
    <div class="mb-3">
        <label asp-for="Event.EventName" class="form-label fw-bold"></label>
        <input asp-for="Event.EventName" class="form-control" />
        <span asp-validation-for="Event.EventName" class="text-danger"></span>
    </div>

    <!-- Event Date (Disabled) -->
    <div class="mb-3">
        <label asp-for="Event.EventDate" class="form-label fw-bold"></label>
        <input asp-for="Event.EventDate" class="form-control" type="date" disabled />
        <span class="form-text text-muted">Event date cannot be changed.</span>
    </div>

   

    <!-- Reservation Reference (Read-only) -->
    <div class="mb-3">
        <label class="form-label fw-bold">Reservation</label>
        <input class="form-control" value="@Model.Event.ReservationReference" disabled />
        <span class="form-text text-muted">Automatically updated when editing.</span>
    </div>

    <button class="btn btn-primary mt-3">Save</button>
    <a asp-page="Index" class="btn btn-secondary mt-3">Back</a>
</form>
