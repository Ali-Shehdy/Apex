
@page
@model Apex.Events.EventsList.EditModel
@using Apex.Events.Data

@{
    ViewData["Title"] = "Edit Event";
}

<h1>Edit Event</h1>

<form method="post">
    <input type="hidden" asp-for="Event.EventId" />

    <div class="form-group">
        <label asp-for="Event.EventName" class="control-label"></label>
        <input asp-for="Event.EventName" class="form-control" />
        <span asp-validation-for="Event.EventName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Event.EventDate" class="control-label"></label>
        <input asp-for="Event.EventDate" class="form-control" type="date" />
        <span asp-validation-for="Event.EventDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Event.EventType" class="control-label"></label>
        <select asp-for="Event.EventType"
                class="form-control"
                asp-items="Html.GetEnumSelectList<EventType>()">
        </select>
        <span asp-validation-for="Event.EventType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Event.ReservationReference" class="control-label"></label>
        <input asp-for="Event.ReservationReference" class="form-control" />
        <span asp-validation-for="Event.ReservationReference" class="text-danger"></span>
    </div>

    <br />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</form>
