@page
@model Apex.Events.EventsList.EditModel
@{
    ViewData["Title"] = "Edit Event";
}

<h1 class="text-primary mb-3">Edit Event</h1>

<form method="post" class="card shadow p-4">
    <input type="hidden" asp-for="Event.EventId" />

    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <!-- Event Name -->
    <div class="mb-3">
        <label asp-for="Event.EventName" class="form-label fw-bold"></label>
        <input asp-for="Event.EventName" class="form-control" />
        <span asp-validation-for="Event.EventName" class="text-danger"></span>
    </div>

    <!-- Event Date (Read-only) -->
    <div class="mb-3">
        <label asp-for="Event.EventDate" class="form-label fw-bold"></label>
        <input asp-for="Event.EventDate" class="form-control" type="date" readonly />
        <small class="form-text text-muted">Event date cannot be changed.</small>
    </div>

    <!-- Venue Selection -->
    <div class="mb-3">
        <label for="SelectedVenueCode" class="form-label fw-bold">Select Venue</label>
        <select asp-for="SelectedVenueCode" class="form-select">
            <option value="">-- Keep Current Venue --</option>
            @foreach (var venue in Model.AvailableVenues)
            {
                <option value="@venue.Code" selected="@(venue.Code == Model.Event.VenueCode)">
                    @venue.Name (Capacity: @venue.Capacity)
                </option>
            }
        </select>
        <small class="form-text text-muted">Select a venue to change reservation</small>
    </div>

    <!-- Current Reservation Reference (Read-only) -->
    <div class="mb-3">
        <label class="form-label fw-bold">Current Reservation</label>
        <input class="form-control" value="@Model.Event.ReservationReference" readonly />
        @if (string.IsNullOrEmpty(Model.Event.ReservationReference))
        {
            <small class="form-text text-warning">No reservation exists for this event.</small>
        }
        else
        {
            <small class="form-text text-muted">Changing venue will create a new reservation.</small>
        }
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>