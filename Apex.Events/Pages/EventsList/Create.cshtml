@page
@model Apex.Events.Pages.EventsList.CreateModel

<h2>Create Event</h2>

<form method="post">

    <div class="mb-3">
        <label asp-for="Event.EventName" class="form-label"></label>
        <input asp-for="Event.EventName" class="form-control" />
        <span asp-validation-for="Event.EventName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Event Type</label>
        <select asp-for="SelectedEventTypeId"
                asp-items="Model.EventTypeSelectList"
                class="form-select">
            <option value="">-- Select Event Type --</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Event Date</label>
        <input asp-for="SelectedDate" type="date" class="form-control" />
    </div>

    <button type="submit"
            asp-page-handler="LoadVenues"
            class="btn btn-secondary">
        Load Available Venues
    </button>

    @if (Model.VenuesLoaded)
    {
        <hr />

        <div class="mb-3">
            <label class="form-label">Available Venues</label>

            <select asp-for="SelectedVenueCode" class="form-select">
                <option value="">-- Select Venue --</option>

                @foreach (var venue in Model.AvailableVenues)
                {
                    <option value="@venue.Code">
                        @venue.Name (Capacity: @venue.Capacity)
                    </option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary">
            Create Event
        </button>
    }
    <div asp-validation-summary="All" class="text-danger"></div>
    @if (Model.VenuesLoaded)
    {
        <div class="alert alert-info">
            Debug: EventType=<b>@Model.SelectedEventTypeId</b>,
            Date=<b>@Model.SelectedDate.ToString("yyyy-MM-dd")</b>,
            Venues=<b>@(Model.AvailableVenues?.Count ?? 0)</b>
        </div>
    }

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
