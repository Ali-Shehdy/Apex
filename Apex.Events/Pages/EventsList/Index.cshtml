@page
@model Apex.Events.EventsList.IndexModel

<h1>Events List</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New Event</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Event Name</th>
            <th>Event Date</th>
            <th>Event Type</th>
            <th>Reservation Reference</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Events)
        {
            <tr>
                <td>@item.EventName</td>
                <td>@item.EventDate.ToShortDateString()</td>
                <td>@item.EventType</td>
                <td>@item.ReservationReference</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.EventId" class="btn btn-warning">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.EventId" class="btn btn-info">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.EventId" class="btn btn-danger">Delete</a> |

                    <a asp-page="/GuestBookings/Create" asp-route-eventId="@item.EventId" class="btn btn-success">Book Guest</a>
                </td>
            </tr>
        }
    </tbody>
</table>
