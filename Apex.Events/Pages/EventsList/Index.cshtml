@page
@model Apex.Events.EventsList.IndexModel
@using Apex.Events.Data

@{
    ViewData["Title"] = "Events List";
}

<h1 class="mb-3">Events List</h1>

<p>
    <a asp-page="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Create New Event
    </a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th><i class="bi bi-calendar-event me-1"></i> Event Name</th>
            <th><i class="bi bi-calendar-date me-1"></i> Event Date</th>
            <th><i class="bi bi-list-check me-1"></i> Event Type</th>
            <th><i class="bi bi-file-text me-1"></i> Reservation Ref</th>
            <th><i class="bi bi-gear me-1"></i> Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Events)
        {
            <tr>
                <td>@item.EventName</td>
                <td>@item.EventDate.ToString("yyyy-MM-dd")</td>
                <td>@item.EventType</td>
                <td>@item.ReservationReference</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.EventId" class="btn btn-sm btn-primary me-1">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-page="./Details" asp-route-id="@item.EventId" class="btn btn-sm btn-info me-1">
                        <i class="bi bi-info-circle"></i> Details
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.EventId" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
