@page
@model Apex.Events.EventsList.IndexModel
@using Apex.Events.Data

@{
    ViewData["Title"] = "Events List";
}

<h1 class="mb-4">Events List</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i>
    </a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Event Name</th>
                <th>Date</th>
                <th>Type</th>
                <th>Reservation Ref</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Events)
            {
                <tr>
                    <td>@item.EventName</td>
                    <td>@item.EventDate.ToShortDateString()</td>
                    <td>@item.EventType</td>
                    <td>@item.ReservationReference</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-page="./Edit" asp-route-id="@item.EventId" class="btn btn-warning btn-sm" title="Edit">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-page="./Details" asp-route-id="@item.EventId" class="btn btn-info btn-sm" title="Details">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-page="./Delete" asp-route-id="@item.EventId" class="btn btn-danger btn-sm" title="Delete">
                                <i class="bi bi-trash"></i>
                            </a>
                            <a asp-page="/GuestBookings/Create" asp-route-eventId="@item.EventId" class="btn btn-success btn-sm" title="Book Guest">
                                <i class="bi bi-person-plus"></i>
                            </a>
                            <a asp-page="/GuestsCount/Details" asp-route-id="@item.EventId" class="btn btn-secondary btn-sm" title="Guest Count">
                                <i class="bi bi-people"></i>
                            </a>
                            <a asp-page="/Staffings/ManageStaff" asp-route-eventId="@item.EventId"
                               class="btn btn-secondary btn-sm" title="Manage Staff">
                                <i class="bi bi-people-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
