@page
@model Apex.Events.Pages.EventsList.IndexModel

@{
    ViewData["Title"] = "Events List";
}

<h1 class="mb-4">Events List</h1>

@if (TempData["DebugCreate"] != null)
{
    <div class="alert alert-warning">
        @TempData["DebugCreate"]
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<p>
    <a asp-page="Create" class="btn btn-primary">
        + Create Event
    </a>
</p>

@if (!Model.Events.Any())
{
    <div class="alert alert-info">
        No events have been created yet.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Event Name</th>
                    <th>Date</th>
                    <th>Event Type</th>
                    <th>Venue</th>
                    <th>Reservation Ref</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Events)
                {
                    <tr>
                        <td>@item.EventName</td>
                        <td>@item.EventDate.ToString("dd/MM/yyyy")</td>
                        <td>@item.EventTypeId</td>
                        <td>@item.VenueCode</td>
                        <td>@item.ReservationReference</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-page="./Edit" asp-route-id="@item.EventId" class="btn btn-warning">Edit</a>
                                <a asp-page="./Details" asp-route-id="@item.EventId" class="btn btn-info">Details</a>
                                <a asp-page="./Delete" asp-route-id="@item.EventId" class="btn btn-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <h2 class="mt-5">Upcoming Events Without a First Aider</h2>
    @if (!Model.UpcomingEventsWithoutFirstAider.Any())
    {
        <div class="alert alert-success">
            All upcoming events have a first aider assigned.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Event Name</th>
                        <th>Date</th>
                        <th>Event Type</th>
                        <th>Venue</th>
                        <th>Reservation Ref</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.UpcomingEventsWithoutFirstAider)
                    {
                        <tr>
                            <td>@item.EventName</td>
                            <td>@item.EventDate.ToString("dd/MM/yyyy")</td>
                            <td>@item.EventTypeId</td>
                            <td>@item.VenueCode</td>
                            <td>@item.ReservationReference</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-page="./Edit" asp-route-id="@item.EventId" class="btn btn-warning">Edit</a>
                                    <a asp-page="./Details" asp-route-id="@item.EventId" class="btn btn-info">Details</a>
                                    <a asp-page="./Delete" asp-route-id="@item.EventId" class="btn btn-danger">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    }