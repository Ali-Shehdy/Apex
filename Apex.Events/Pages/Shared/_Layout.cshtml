<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Apex.Events</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Apex.Events.styles.css" asp-append-version="true" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container-fluid">

                

                <!-- Mobile toggle -->
                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menu -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav mx-auto gap-lg-2">

                        <li class="nav-item">
                            <a class="nav-link fw-semibold text-dark" asp-page="/Index">
                                <i class="bi bi-house-door me-1"></i> Home
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link fw-semibold text-dark" asp-page="/EventsList/Index">
                                <i class="bi bi-calendar-event me-1"></i> Events
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link fw-semibold text-dark" asp-page="/GuestBookings/Index">
                                <i class="bi bi-journal-check me-1"></i> Guest Bookings
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link fw-semibold text-dark" asp-page="/GuestsList/Index">
                                <i class="bi bi-people me-1"></i> Guests
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link fw-semibold text-dark" asp-page="/Staffs/Index">
                                <i class="bi bi-people-fill me-1"></i> Staff
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link fw-semibold text-dark" asp-page="/Staffings/Index">
                                <i class="bi bi-briefcase-fill me-1"></i> Staffing
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top bg-white mt-4">
        <div class="container py-3">

            <!-- Top row: Logo + Contact -->
            <div class="d-flex flex-column flex-md-row align-items-center justify-content-between gap-3 mb-2">

                <!-- Logo -->
                <div class="d-flex align-items-center">
                    <img src="~/images/TU.png" alt="Logo"
                         style="height:50px; width:auto;">
                </div>

                <!-- Contact Info -->
                <div class="d-flex flex-column flex-md-row align-items-center gap-3 text-dark fw-semibold">
                    <div>
                        <i class="bi bi-person-fill me-1"></i> Ali Shehdy
                    </div>
                    <div>
                        <i class="bi bi-envelope-fill me-1"></i> E4337126@live.tees.ac.uk
                    </div>
                    <div>
                        <i class="bi bi-telephone-fill me-1"></i> (+44)7597058341
                    </div>
                </div>
            </div>

            <!-- Bottom row: Copyright -->
            <div class="text-center text-muted small">
                &copy; 2024 - Apex.Events -
                <a asp-area="" asp-page="/Privacy" class="text-decoration-none">Privacy</a>
            </div>

        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>