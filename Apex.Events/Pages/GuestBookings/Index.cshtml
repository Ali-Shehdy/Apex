@page
@model Apex.Events.Pages.GuestBookings.IndexModel
@{
    ViewData["Title"] = "Guest Bookings";
}

<h2 class="mb-4">Guest Bookings</h2>

<div class="d-flex justify-content-end mb-3">
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Book New Guest
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Guest</th>
                    <th>Event</th>
                    <th>Booking Date</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.GuestBookingList)
                {
                    <tr>
                        <td>@item.Guest.FirstName @item.Guest.LastName</td>
                        <td>@item.Event.EventName</td>
                        <td>@item.BookingDate.ToShortDateString()</td>
                        <td class="text-end">
                            <a asp-page="Details" asp-route-id="@item.GuestBookingId" class="btn btn-sm btn-info me-1">
                                Details
                            </a>
                            <a asp-page="Edit" asp-route-id="@item.GuestBookingId" class="btn btn-sm btn-warning me-1">
                                Edit
                            </a>
                            <a asp-page="Delete" asp-route-id="@item.GuestBookingId" class="btn btn-sm btn-danger">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
