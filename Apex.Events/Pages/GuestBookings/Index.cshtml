@page
@model Apex.Events.Pages.GuestBookings.IndexModel
@{
    ViewData["Title"] = "Guest Bookings";
}

<h1 class="mb-4">Guest Bookings</h1>

<div class="d-flex justify-content-end mb-3">
    <a asp-page="Create" class="btn btn-primary" title="Book New Guest">
        <i class="bi bi-plus-circle"></i> Book New Guest
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Guest</th>
                    <th>Event</th>
                    <th>Booking Date</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.GuestBookingList)
                {
                    <tr>
                        <td>@item.Guest.FirstName @item.Guest.LastName</td>
                        <td>@item.Event.EventName</td>
                        <td>@item.BookingDate.ToShortDateString()</td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a asp-page="Details" asp-route-id="@item.GuestBookingId" class="btn btn-sm btn-info" title="Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-page="Edit" asp-route-id="@item.GuestBookingId" class="btn btn-sm btn-warning" title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-page="Delete" asp-route-id="@item.GuestBookingId" class="btn btn-sm btn-danger" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
