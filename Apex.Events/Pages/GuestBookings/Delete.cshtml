@page
@model Apex.Events.Pages.GuestBookings.DeleteModel

<h2 class="mb-4 text-danger">Delete Guest Booking</h2>

<div class="card shadow-sm p-4">

    <p><strong>Guest:</strong> @Model.GuestBooking.Guest.FirstName @Model.GuestBooking.Guest.LastName</p>
    <p><strong>Event:</strong> @Model.GuestBooking.Event.EventName</p>
    <p><strong>Date:</strong> @Model.GuestBooking.BookingDate.ToShortDateString()</p>

    <form method="post" class="mt-3">
        <button class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
    </form>
</div>
