@page
@model Apex.Events.Pages.GuestBookings.EditModel

<h2 class="mb-4">Edit Guest Booking</h2>

<div class="card shadow-sm p-4">
    <form method="post">

        <input type="hidden" asp-for="GuestBooking.GuestBookingId" />

        <div class="mb-3">
            <label asp-for="GuestBooking.GuestId" class="form-label"></label>
            <select asp-for="GuestBooking.GuestId" asp-items="Model.GuestList" class="form-select"></select>
        </div>

        <div class="mb-3">
            <label asp-for="GuestBooking.EventId" class="form-label"></label>
            <select asp-for="GuestBooking.EventId" asp-items="Model.EventList" class="form-select"></select>
        </div>

        <div class="mb-3">
            <label asp-for="GuestBooking.BookingDate" class="form-label"></label>
            <input asp-for="GuestBooking.BookingDate" class="form-control" />
        </div>

        <button class="btn btn-primary">Save Changes</button>
        <a asp-page="Index" class="btn btn-outline-secondary ms-2">Cancel</a>

    </form>
</div>
