@page
@model Apex.Events.Pages.GuestBookings.CreateModel
@{
    ViewData["Title"] = "Book Guest to Event";
}

<h2 class="mb-4">Book Guest to Event</h2>

<div class="card shadow-sm p-4">
    <form method="post">

        <div class="mb-3">
            <label asp-for="GuestBooking.GuestId" class="form-label"></label>
            <select asp-for="GuestBooking.GuestId" asp-items="Model.GuestList" class="form-select">
                <option value="">-- Select Guest --</option>
            </select>
            <span asp-validation-for="GuestBooking.GuestId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="GuestBooking.EventId" class="form-label"></label>
            <select asp-for="GuestBooking.EventId" asp-items="Model.EventList" class="form-select">
                <option value="">-- Select Event --</option>
            </select>
            <span asp-validation-for="GuestBooking.EventId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="GuestBooking.BookingDate" class="form-label"></label>
            <input asp-for="GuestBooking.BookingDate" class="form-control" />
            <span asp-validation-for="GuestBooking.BookingDate" class="text-danger"></span>
        </div>

        <div class="mt-4">
            <button class="btn btn-primary">Save</button>
            <a asp-page="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
