@page "{id:int}"
@model Apex.Events.Pages.GuestsCount.DetailsModel

<div class="container mt-4">

    <div class="card shadow-lg border-0">
        <div class="card-body">

            <h2 class="mb-3 text-primary">@Model.Event.EventName</h2>

            <p class="text-muted">
                <strong>📅 Event Date:</strong> @Model.Event.EventDate.ToLongDateString()
            </p>

            <div class="alert alert-info fs-5">
                <strong>Total Guests:</strong> @Model.GuestCount
            </div>

            <hr />

            <h4 class="mt-4">Guest List</h4>

            @if (Model.GuestCount == 0)
            {
                <div class="alert alert-warning mt-3">
                    No guests have booked for this event yet.
                </div>
            }
            else
            {
                <table class="table table-striped table-hover mt-3">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Guest Name</th>
                            <th>Email</th>
                            <th>Booking Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 1;
                            foreach (var b in Model.Event.GuestBookings)
                            {
                                <tr>
                                    <td>@index</td>
                                    <td>@b.Guest.FirstName @b.Guest.LastName</td>
                                    <td>@b.Guest.Email</td>
                                    <td>@b.BookingDate.ToShortDateString()</td>
                                </tr>
                                index++;
                            }
                        }
                    </tbody>
                </table>
            }

            <a class="btn btn-secondary mt-3" asp-page="Index">⬅ Back to Events</a>
        </div>
    </div>

</div>
