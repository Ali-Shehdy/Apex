@page
@model Apex.Events.Pages.GuestsCount.DetailsModel

<div class="container mt-4">

    <div class="card shadow-lg border-0">
        <div class="card-body">

            <h2 class="text-primary">@Model.Event.EventName</h2>
            <p class="text-muted mb-2">
                <strong>Date:</strong> @Model.Event.EventDate.ToShortDateString()
                <br />
            </p>

            <hr />

            <h4 class="text-dark">
                Total Guests:
                <span class="badge bg-info text-dark fs-5">
                    @Model.Event.GuestBookings.Count
                </span>
            </h4>

            <table class="table table-hover table-bordered mt-4">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Guest Name</th>
                        <th>Email</th>
                        <th>Booking Date</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int index = 1;
                        foreach (var gb in Model.Event.GuestBookings)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@gb.Guest.FirstName @gb.Guest.LastName</td>
                                <td>@gb.Guest.Email</td>
                                <td>@gb.BookingDate.ToShortDateString()</td>
                            </tr>
                            index++;
                        }
                    }
                </tbody>
            </table>

            <a asp-page="/EventsList/Index" class="btn btn-secondary mt-3">Back to Events List</a>

        </div>
    </div>

</div>
